#!/usr/bin/env python3
import mysql.connector
import requests
import time

# Your JSON data
smart_plug_data = {
    "allIP": [
        "192.168.5.110",
        "192.168.5.151",
        "192.168.5.152",
        "192.168.5.153",
        "192.168.5.154",
        "192.168.5.155",
        "192.168.5.156",
        "192.168.5.157",
        "192.168.5.158",
        "192.168.5.159",
        "192.168.5.160",
        "192.168.5.161",
        "192.168.5.162",
        "192.168.5.163",
        "192.168.5.164",
        "192.168.5.165",
        "192.168.5.166",
        "192.168.5.167",
        "192.168.5.168",
        "192.168.5.169",
        "192.168.5.170"
    ],
    "interval_to_call": 500
}

host = 'localhost'
user = 'root'
password = 'z'
database = 'phd'
table_name = 'testa'

insert_query = f"""
INSERT INTO {table_name} 
(timestamp, master, Alpha, Bravo, Charlie, Delta, Echo, Foxtrot, Golf, Hotel, India, Juliet, Kilo, Lima, Mike, November, Oscar, Papa, Quebec, Romeo, Sierra, Tango) 
VALUES 
(%s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s, %s)
"""

# Establish connection to MySQL
connection = mysql.connector.connect(
    host=host,
    user=user,
    password=password,
    database=database
)

if connection.is_connected():
    print("Connected to MySQL server")
    cursor = connection.cursor()

# Create a table using table_name variable if it doesn't exist
    create_table_query = f"""
    CREATE TABLE IF NOT EXISTS {table_name} (
        timestamp BIGINT(255),
        master FLOAT(12),
        Alpha FLOAT(12),
        Bravo FLOAT(12),
        Charlie FLOAT(12),
        Delta FLOAT(12),
        Echo FLOAT(12),
        Foxtrot FLOAT(12),
        Golf FLOAT(12),
        Hotel FLOAT(12),
        India FLOAT(12),
        Juliet FLOAT(12),
        Kilo FLOAT(12),
        Lima FLOAT(12),
        Mike FLOAT(12),
        November FLOAT(12),
        Oscar FLOAT(12),
        Papa FLOAT(12),
        Quebec FLOAT(12),
        Romeo FLOAT(12),
        Sierra FLOAT(12),
        Tango FLOAT(12)
    )
    """

    cursor.execute(create_table_query)
    print(f"Table {table_name} created or already exists")

    def fetch_data_and_store():
        while True:
            pwr_values = [0] * 22  # Initialize with zeros for all power values
            for i, ip in enumerate(smart_plug_data["allIP"]):
                url = f"http://{ip}/sensor/athom_smart_plug_v2_power"
                try:
                    # print(insert_query)
                    response = requests.get(url)
                    power_value = 0
                    if response.status_code == 200:
                        power_value = response.json().get("value", 0)
                    pwr_values[i] = power_value
                except requests.RequestException as e:
                    # print(f"Error fetching data from {url}: {e}")
                    pwr_values[i] = 0

            pwr_values = [int(time.time())] + pwr_values
            print(pwr_values)
            cursor.execute(insert_query, tuple(pwr_values))
            connection.commit()

            time.sleep(smart_plug_data["interval_to_call"] / 1000)

    # Call the function to start fetching and storing data
    fetch_data_and_store()

    # Close the connection
    cursor.close()
    connection.close()
    print("Connection closed")
else:
    print("Connection to MySQL server failed")
